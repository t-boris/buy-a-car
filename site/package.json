{
  "name": "autofinder",
  "version": "1.0.0",
  "type": "module",
  "description": "AutoFinder - Simple car inventory search with finance estimates",
  "scripts": {
    "copy-data": "mkdir -p public && cp ../data/*.json public/ 2>/dev/null || echo 'No data files to copy'",
    "dev": "npm run copy-data && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
